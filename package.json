{
  "name": "tvstreamtest",
  "version": "1.0.0",
  "description": "tv stream test for HCI",
  "main": "src/index.js",
  "scripts": {
    "test": "mocha",
    "build-ts": "tsc",
    "copyall":"copyfiles -u 1 src/views/**/*.html src/static/**/*.css dist/",
    "start": "tsc -p tsconfig.json && npm run copyall && node dist/app.js",
    "startwatch": "nodemon dist/app.js"
  },
  "author": "cipto",
  "license": "ISC",
  "dependencies": {
    "@overnightjs/core": "^1.6.9",
    "@overnightjs/logger": "^1.1.9",
    "@types/express": "^4.17.0",
    "@types/mustache-express": "^1.2.1",
    "body-parser": "^1.19.0",
    "chalk": "^2.4.2",
    "express": "^4.17.1",
    "mongoose": "^5.6.9",
    "mustache": "^3.0.1",
    "mustache-express": "^1.2.8",
    "typescript": "^3.5.3"
  },
  "devDependencies": {
    "@types/mongodb": "^3.1.32",
    "@types/mongoose": "^5.5.12",
    "copyfiles": "^2.1.1",
    "jest": "^24.8.0",
    "mongodb-memory-server": "^5.1.10"
  },
  "nodemonConfig": {
    "ignore": [
    "**/*.test.ts",
    "**/*.spec.ts",
    ".git",
    "node_modules"
    ],
    "watch": [
    "src"
    ],
    "exec": "npm start",
    "ext": "ts"
    }
}
